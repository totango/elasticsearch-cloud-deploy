{
  "description": "Elasticsarch Image",
  "builders": [
    {
    	"name": "aws",
      "type": "amazon-ebs",
      "ami_name": "elasticsearch5-{{isotime | clean_resource_name}}",
      "availability_zone": "{{user `aws_az`}}",
      "iam_instance_profile": "packer",
      "instance_type": "t2.micro",
      "region": "{{user `aws_region`}}",
      "run_tags": {
        "role": "packer"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*ubuntu-jammy-22.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ssh_timeout": "10m",
      "ssh_username": "ubuntu",
      "tags": {
        "ImageType": "elasticsearch5-packer-image"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../assets/scripts",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /opt/cloud-deploy-scripts",
        "sudo mv /tmp/scripts/* /opt/cloud-deploy-scripts",
        "sudo chmod +x -R /opt/cloud-deploy-scripts"
      ]
    },
    {
      "type": "shell",
      "script": "update-machine.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "../assets/elasticsearch.yml",
      "destination": "elasticsearch.yml"
    },
    {
      "type": "shell",
      "script": "install-java8.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-elasticsearch5.sh",
      "environment_vars": [ "ES_VERSION={{user `elasticsearch_version`}}" ],
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-cloud-plugin.sh"
    },
    {
      "type": "shell",
      "script": "install-beats.sh"
    },
    {
      "type": "shell",
      "script": "install-esrally.sh",
      "execute_command": "echo '' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "install-custom.sh"
    },
    {
      "type": "shell",
	"environment_vars": [ "NR_LICENSE={{user `nr_license`}}" ],
      "script": "install-newrelic.sh"
    },
    {
      "type": "shell",
	"environment_vars": [ "SUMO_TOKEN={{user `sumo_token`}}" ],
      "script": "install-sumo.sh"
    }
  ]
}
